<%- include('./partials/header') %>

    <% if(success.length> 0) { %>
        <div class="fixed top-6 left-1/2 transform -translate-x-1/2 bg-blue-600 text-white px-4 py-2 rounded shadow">
            <%= success %>
        </div>
        <% } %>

            <div class="min-h-screen bg-gray-100">
                <div class="container mx-auto px-6 py-12 flex gap-6">

                    <!-- Sidebar -->
                    <aside class="w-1/4 bg-white rounded shadow p-6 h-fit">
                        <nav class="flex flex-col space-y-4">
                            <a href="#" class="text-blue-600 font-medium hover:underline">All Products</a>
                            <a href="#" class="text-blue-600 font-medium hover:underline">Create New Product</a>
                        </nav>
                    </aside>

                    <!-- Main Form -->
                    <main class="flex-1 bg-white rounded shadow p-8">
                        <h1 class="text-2xl font-semibold mb-6 border-b pb-2">Create New Product</h1>
                        <form action="/owner/createproduct" method="POST" enctype="multipart/form-data" autocomplete="off"
                            class="space-y-8">

                            <!-- Product Details -->
                            <section>
                                <h2 class="text-xl font-medium mb-4">Product Details</h2>

                                <div class="mb-4">
                                    <label class="block mb-1 font-medium text-gray-700">Product Image</label>
                                    <input type="file" name="image"
                                        class="block w-full text-sm border rounded px-3 py-2">
                                </div>

                                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                    <input name="fullName" type="text" placeholder="Product Name"
                                        class="border p-2 rounded w-full" required>
                                    <input name="price" type="text" placeholder="Product Price"
                                        class="border p-2 rounded w-full" required>
                                    <input name="discount" type="text" placeholder="Discount Price"
                                        class="border p-2 rounded w-full">
                                </div>
                            </section>

                            <!-- Panel Details -->
                            <section>
                                <h2 class="text-xl font-medium mb-4">Panel Details</h2>
                                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                    <input name="bgColor" type="text" placeholder="Background Color"
                                        class="border p-2 rounded w-full">
                                    <input name="panelColor" type="text" placeholder="Panel Color"
                                        class="border p-2 rounded w-full">
                                    <input name="textColor" type="text" placeholder="Text Color"
                                        class="border p-2 rounded w-full">
                                </div>
                            </section>

                            <div>
                                <button type="submit"
                                    class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-5 rounded">
                                    Create Product
                                </button>
                            </div>
                        </form>
                    </main>
                </div>
            </div>

            <%- include('./partials/footer') %>